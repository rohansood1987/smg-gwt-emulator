      <mgwt:LayoutPanel ui:field="gameTabsPanel"/>
  	  <!-- <mgwt:LayoutPanel ui:field="mainPanel"> -->
      	<mgwt:LayoutPanel ui:field="mainConfigPanel" styleName="mainConfigPanel">
	      <mgwt:WidgetList round="true">
	          <mgwt:FormListEntry ui:field="numOfPlayersEntry"/>
	          <mgwt:FormListEntry ui:field="tokensInfoPanelEntry"/>
   	          <mgwt:FormListEntry ui:field="widthEntry"/>
   	          <mgwt:FormListEntry ui:field="heightEntry"/>
	       	  <mgwt:FormListEntry ui:field="timeLimitEntry"/>
	       	  <mgwt:FormListEntry ui:field="networkDelayEntry"/>
	       	  <mgwt:FormListEntry ui:field="urlEntry"/>
	          <mgwt:RoundPanel>
		           <g:HorizontalPanel ui:field="otherCheckBoxPanel">
		               	  <g:VerticalPanel>
		               	  	<g:Label>Add Viewer</g:Label>
				          	<mgwt:MCheckBox ui:field="viewerCheck" value="false" >
				          	</mgwt:MCheckBox>
				          </g:VerticalPanel>
				          <g:HTML>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</g:HTML>
				          <g:VerticalPanel>
				          	<g:Label>Single Player</g:Label>
				          	<mgwt:MCheckBox ui:field="singlePlayerCheck" value="true" >
				          	</mgwt:MCheckBox>
				          </g:VerticalPanel>
				          <g:HTML>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</g:HTML>
				          <g:VerticalPanel>
					          <g:Label>AI Present</g:Label>
					          <mgwt:MCheckBox ui:field="computerPlayerCheck" value="false">
					          </mgwt:MCheckBox>
				          </g:VerticalPanel>
		          </g:HorizontalPanel>
	          </mgwt:RoundPanel>
	          <mgwt:Button text="Start Game" ui:field="btnStart"/>
	          <mgwt:RoundPanel ui:field="btnsPanel" visible="false">
		          <g:HorizontalPanel>
		            <mgwt:Button text="Cancel" ui:field="btnCancel"/>
		            <mgwt:Button  text="Reset" ui:field="btnReset" />
		            <mgwt:Button text="Reload" ui:field="btnReload" />
		          </g:HorizontalPanel>
	          </mgwt:RoundPanel>
	      </mgwt:WidgetList>
    </mgwt:LayoutPanel>
    <mgwt:LayoutPanel visible="false" ui:field="mainEmulatorPanel">
	    <g:VerticalPanel ui:field="consolePanel" width="300px" visible="false">
          <g:HorizontalPanel width="300px" height="30px">
            <b:Button ui:field="previousState" icon="STEP_BACKWARD" />
            <b3:Slider ui:field="sliderBar" handle="SQUARE" width="300px"></b3:Slider>
            <b:Button ui:field="nextState" icon="STEP_FORWARD" />
          </g:HorizontalPanel>
	    </g:VerticalPanel>
    </mgwt:LayoutPanel>
