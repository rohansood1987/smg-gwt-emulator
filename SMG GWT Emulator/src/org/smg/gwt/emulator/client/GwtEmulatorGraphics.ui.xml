<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:mgwt="urn:import:com.googlecode.mgwt.ui.client.widget"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
  ui:generateLocales="default">
  
 <ui:with field='emulatorConstants' type='org.smg.gwt.emulator.i18n.EmulatorConstants'/>
 <mgwt:LayoutPanel ui:field="main">
      <mgwt:HeaderPanel ui:field="headerPanel">
        <mgwt:left>
          <g:VerticalPanel ui:field ="headerPanelLeft">
            <g:HTML ui:field = "turnLabel" />
            <g:HTML ui:field = "timerLabel" />
          </g:VerticalPanel>
        </mgwt:left>
        <mgwt:center>
              <g:HTML ui:field = "configLabel">
                  <b>
                      <ui:msg key="gameConfiguration">Game Config</ui:msg>
                  </b>
              </g:HTML>
        </mgwt:center>
        <mgwt:right>
          <mgwt:buttonbar.ButtonBarText ui:field="btnOptions">
              <ui:text from = "{emulatorConstants.options}"/>
          </mgwt:buttonbar.ButtonBarText>
        </mgwt:right>
      </mgwt:HeaderPanel>
      
      <mgwt:ScrollPanel ui:field="mainConfigPanel">
        <mgwt:WidgetList round="true">
            <mgwt:FormListEntry ui:field="numOfPlayersEntry"/>
            <mgwt:FormListEntry ui:field="tokensInfoPanelEntry"/>
            <mgwt:FormListEntry ui:field="timeLimitEntry"/>
            <mgwt:FormListEntry ui:field="networkDelayEntry"/>
            <mgwt:FormListEntry ui:field="urlEntry"/>
            <mgwt:FormListEntry ui:field="viewerEntry" />
            <mgwt:FormListEntry ui:field="singlePlayerEntry" />
            <mgwt:FormListEntry ui:field="aiEntry" />
            <mgwt:Button ui:field="btnStart">
                <ui:msg key="startGame">Start Game</ui:msg>
            </mgwt:Button>
            <mgwt:RoundPanel ui:field="btnsPanel" visible="false">
              <g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" width="100%">
                 <mgwt:Button ui:field="btnCancel" small="true">
                     <ui:text from = "{emulatorConstants.cancel}"/>
                 </mgwt:Button>
                 <mgwt:Button ui:field="btnReset" small="true">
                     <ui:text from = "{emulatorConstants.reset}"/>
                 </mgwt:Button>
                 <mgwt:Button ui:field="btnReload" small="true">
                     <ui:text from = "{emulatorConstants.reload}"/>
                 </mgwt:Button>
               </g:HorizontalPanel>
            </mgwt:RoundPanel>
        </mgwt:WidgetList>
      </mgwt:ScrollPanel>

      <mgwt:buttonbar.ButtonBar ui:field="footerPanel" visible="false">
          <mgwt:buttonbar.RefreshButton ui:field="btnReloadEmulator" />
          <mgwt:buttonbar.ButtonBarSpacer />
          <mgwt:buttonbar.ComposeButton ui:field="btnEditState" />
          <mgwt:buttonbar.ButtonBarSpacer />
          <mgwt:buttonbar.PreviousSlideButton ui:field="btnPrevState"/>
          <mgwt:buttonbar.ButtonBarSpacer />
          <mgwt:buttonbar.ButtonBarText ui:field="btnConsole">
              <ui:text from = "{emulatorConstants.console}"/>
          </mgwt:buttonbar.ButtonBarText>
          <mgwt:buttonbar.ButtonBarSpacer />
          <mgwt:buttonbar.NextSlideButton ui:field="btnNextState"/>
          <mgwt:buttonbar.ButtonBarSpacer />
          <mgwt:buttonbar.CameraButton ui:field="btnSaveState" />
          <mgwt:buttonbar.ButtonBarSpacer />
          <mgwt:buttonbar.ActionButton ui:field="btnLoadState" />
      </mgwt:buttonbar.ButtonBar>
 </mgwt:LayoutPanel>
</ui:UiBinder> 