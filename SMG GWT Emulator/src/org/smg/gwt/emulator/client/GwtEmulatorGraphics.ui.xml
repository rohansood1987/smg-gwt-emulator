	        <mgwt:buttonbar.ButtonBarSpacer />
	        <mgwt:buttonbar.ButtonBarText ui:field="btnConsole" HTML="Console" />
    	    <mgwt:buttonbar.ButtonBarSpacer />
	        <mgwt:buttonbar.CameraButton ui:field="btnSaveState" />
	        <mgwt:buttonbar.ButtonBarSpacer />
	        <mgwt:buttonbar.ActionButton ui:field="btnLoadState" />
      </mgwt:buttonbar.ButtonBar>
      <g:HorizontalPanel>
	      <g:HTML ui:field = "turnLabel" ></g:HTML>
	      <g:HTML ui:field = "timerLabel" ></g:HTML>
      </g:HorizontalPanel>
