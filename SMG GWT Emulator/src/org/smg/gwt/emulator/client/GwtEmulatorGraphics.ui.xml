<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  
  <g:FlowPanel>
  
    <g:AbsolutePanel ui:field="mainConfigPanel">
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Number of players:"/>
	      <g:ListBox width="20" ui:field="listNumPlayers">
	        <g:item value='2'>2 players</g:item>
	        <g:item value='3'>3 players</g:item>
	        <g:item value='4'>4 players</g:item>
	        <g:item value='5'>5 players</g:item>
	        <g:item value='6'>6 players</g:item>
	        <g:item value='7'>7 players</g:item>
	        <g:item value='8'>8 players</g:item>
	        <g:item value='9'>9 players</g:item>
	      </g:ListBox>
	    </g:HorizontalPanel>
	  <g:Label text="Game size in pixels:"/>
	  <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="--- Width:"/>
        <g:TextBox width="20" ui:field="txtGameWidth" value="500"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="--- Height:"/>
        <g:TextBox width="20" ui:field="txtGameHeight" value="500"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Default Time Per Turn (in Secs):"/>
        <g:TextBox width="100" ui:field="txtDefaultTimePerTurn" value="60"/>
      </g:HorizontalPanel>
   	  <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Game URL:"/>
	    <g:TextBox width="200" ui:field="txtGameUrl" 
	        value="https://googledrive.com/host/0B_LEQb_5Yz6RU0cxVG5sbllMaUk/TicTacToeGame.html"/>
      </g:HorizontalPanel>
      <g:Button text="Start Game" ui:field="btnStart"/>
    </g:AbsolutePanel>
    <g:HorizontalPanel visible="false" ui:field="gameEmulatorStatusPanel">
        <g:HTML HTML="TURN: "></g:HTML>
        <g:Label ui:field = "playerTurnLabel" width="100px"></g:Label>
        <g:HTML HTML="TIME LEFT: "></g:HTML>
        <g:Label ui:field = "turnTimerLabel" width="100px"></g:Label>
    	<g:Button text="Reload Emulator" ui:field="btnReLoadEmulator" />
    </g:HorizontalPanel>
  	<g:HorizontalPanel ui:field="gamePanel">
  	  <g:AbsolutePanel ui:field="gameTabsPanel"/>
  	  <!--g:Frame height="400px" width="800px" ui:field="gameFrame"/-->
  	  <g:VerticalPanel>
  	   <g:TextArea ui:field="console"/>
  	   <g:HorizontalPanel>
	  	   <g:Button text="Edit State" ui:field="btnEditState" />
	       <g:Button text="Save State" ui:field="btnSaveState" />
	       <g:Button text="Load State" ui:field="btnLoadState" />
  	   </g:HorizontalPanel>
  	   <g:AbsolutePanel ui:field="sliderBarPanel"></g:AbsolutePanel> 
  	  </g:VerticalPanel>
  	</g:HorizontalPanel>
  </g:FlowPanel>
  
  <!-- g:VerticalPanel>
    <g:HorizontalPanel height="100px" ui:field="opponentArea"/>
    <g:HorizontalPanel height="100px" ui:field="middleArea"/>
    <g:HorizontalPanel height="100px">
      <g:HorizontalPanel ui:field="playerArea"/>
    </g:HorizontalPanel>
    <g:HorizontalPanel height="100px">
      <g:HorizontalPanel width="120" height="100px" ui:field="selectedArea"/>
      <g:Button ui:field="claimBtn" text="Finish selecting cards"/>
    </g:HorizontalPanel>
  </g:VerticalPanel-->
  
</ui:UiBinder> 