<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  
  <g:FlowPanel ui:field="mainPanel" height="100%">
  
    <g:AbsolutePanel ui:field="mainConfigPanel" styleName="mainConfigPanel">
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Number of players:"/>
	      <g:ListBox width="20" ui:field="listNumPlayers">
	        <g:item value='2'>2 players</g:item>
	        <g:item value='3'>3 players</g:item>
	        <g:item value='4'>4 players</g:item>
	        <g:item value='5'>5 players</g:item>
	        <g:item value='6'>6 players</g:item>
	        <g:item value='7'>7 players</g:item>
	        <g:item value='8'>8 players</g:item>
	        <g:item value='9'>9 players</g:item>
	      </g:ListBox>
	    </g:HorizontalPanel>
	    <g:Label text="Game size in pixels:"/>
	    <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label width="65px" text="--- Width:"/>
        <g:TextBox width="50px" ui:field="txtGameWidth" value="800"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label width="65px" text="--- Height:"/>
        <g:TextBox width="50px" ui:field="txtGameHeight" value="450"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Default Time Per Turn (in Secs):"/>
        <g:TextBox width="50px" ui:field="txtDefaultTimePerTurn" value="60"/>
      </g:HorizontalPanel>
      <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Max Random Network Delay (in millis):"/>
        <g:TextBox width="50px" ui:field="txtRandomDelayMillis" value="0"/>
      </g:HorizontalPanel>
   	  <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE">
        <g:Label text="Game URL:"/>
        <g:TextBox width="400px" ui:field="txtGameUrl" 
            value="http://2-dot-cheat-game.appspot.com/CheatGame.html"/>
      </g:HorizontalPanel>
      <g:VerticalPanel>
          <g:CheckBox text="Add Viewer" ui:field="viewerCheck" value="true"></g:CheckBox>
          <g:CheckBox text="Single Player" ui:field="singlePlayerCheck"></g:CheckBox>
          <g:CheckBox text="AI Player Present" ui:field="computerPlayerCheck"></g:CheckBox>
      </g:VerticalPanel>
      <g:Button text="Start Game" ui:field="btnStart"/>
      <g:HorizontalPanel ui:field="btnsPanel" visible="false">
	      <g:Button text="Cancel" ui:field="btnCancel"/>
	      <g:Button text="Reset" ui:field="btnReset" />
	      <g:Button text="Reload" ui:field="btnReload" />
      </g:HorizontalPanel>
    </g:AbsolutePanel>
    
    <g:HorizontalPanel visible="false" ui:field="mainEmulatorPanel" styleName="mainEmulatorPanel">
	    <g:VerticalPanel ui:field="consolePanel" styleName="consolePanel">
	     <g:HorizontalPanel>
	       <g:Button text="Edit State" ui:field="btnEditState" />
	       <g:Button text="Save State" ui:field="btnSaveState" />
	       <g:Button text="Load State" ui:field="btnLoadState" />
	     </g:HorizontalPanel>
	     <g:AbsolutePanel ui:field="sliderBarPanel"></g:AbsolutePanel> 
	    </g:VerticalPanel>
	    
	    <g:VerticalPanel>
		    <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE"
		    ui:field="gameEmulatorStatusPanel" styleName="gameEmulatorStatusPanel">
	        <g:HTML HTML="TURN: "></g:HTML>
	        <g:Label ui:field = "playerTurnLabel" width="100px"></g:Label>
	        <g:HTML HTML="TIME LEFT: "></g:HTML>
	        <g:Label ui:field = "turnTimerLabel" width="100px"></g:Label>
  	      <g:Button text="Reload Emulator" ui:field="btnReLoadEmulator" />
  	    </g:HorizontalPanel>
	    
		    <g:HorizontalPanel ui:field="gamePanel" styleName="gamePanel">
		      <g:AbsolutePanel ui:field="gameTabsPanel"/>
		      <!--g:Frame height="400px" width="800px" ui:field="gameFrame"/-->
		    </g:HorizontalPanel>
	    
	    </g:VerticalPanel>

    </g:HorizontalPanel>

  </g:FlowPanel>

</ui:UiBinder> 